/* Responsive Menu for Smaller Screens */
.hamburger-checkbox {
    display: none; /* Hidden by default */
}

@media (max-width: 768px) {
    .hamburger-checkbox {
        display: block; /* Show checkbox on small screens */
    }
    .hamburger-checkbox:checked + ul {
        display: block;
    }
    nav ul {
        display: none;
        flex-direction: column;
        width: 100%;
        text-align: center;
    }
    nav ul li {
        margin-bottom: 10px;
    }
}

